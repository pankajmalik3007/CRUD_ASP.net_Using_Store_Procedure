@model CRUD_using_SP.Models.Customer

<h2>Update Customer</h2>

<form asp-action="Update">

    <input asp-for="CustomerID" type="hidden"/>
    <div class="form-group">
        <label asp-for="CustName"></label>
        <input asp-for="CustName" class="form-control" />
        <span asp-validation-for="CustName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" type="date" class="form-control" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>
